{
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "react"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "rules": {
    "eqeqeq": [ 2, "smart" ],
    "no-console": 1,
    "semi": [ 2, "never" ]
  },
  "env": {
    "es6": true,
    "browser": true,
    "mocha": true,
    "node": true
  }
}
